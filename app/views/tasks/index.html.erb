<h1>List des tasks </h1>

<div class="general">
  <ul>
    <% @tasks.each do |task| %>
      <%= link_to task.title , task_path(task) %>
        <%if task.completed == true%>
          <input type="checkbox" <%= "[X]" %>>
        <%else %>
          <input type="checkbox" <%= "[ ]" %>>
        <% end %>
        <%= link_to "delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are Your sure to delete task ?"} %>
        <br>
    <% end %>
    <br>
    <%= link_to "Creat a new task", "/tasks/new"%>
  <ul>
</div>
